<%- include('partials/mainHeader'); -%>
<%if(findFiles>0){%>
<section class="advertise advertise--mobile">
  <div class="grid">
    <%for(let i=findFiles-1;i>=0;i--){%>
  <div>
    <a href="/aboutbook/<%=found[i]._id%>">
      <img src="<%=found[i].image%>" class="advertise__image" alt="img" />
    </a>
      <p class="advertise__info">
        <a class="advertise__info--link" href="/aboutbook/<%=found[i]._id%>">
        <b>Author: <%=found[i].author_Name%></b><br />
        <b>price: <%=found[i].book_price%> taka</b>
        </a>
      </p>
    </div>
      <%}%>
  </div>
  </section>
<%}else{%>
  <div class="NoFilesUploaded">
    <h2 class="NoFiles">No files Uploaded yet</h2>
  </div>
<%}%>
  </div>

<%- include('partials/mainFooter') ;-%>
